@using BlazorWeather.Shared

<div class="forecast">
    <div class="forecast-header">
        <div class="day">@DailyWeather.Day</div>
    </div> <!-- .forecast-header -->
    <div class="forecast-content">
        <div class="forecast-icon">
            <img src="images/icons/icon-3.svg" alt="" width=48>
        </div>
        <div class="degree">@DailyWeather.MaximumTemperature<sup>o</sup> C</div>
        <small>@DailyWeather.MinimumTemperature<sup>o</sup></small>
    </div>
</div>

@functions {
    public WeatherDayDTO DailyWeather { get; set; }
}
